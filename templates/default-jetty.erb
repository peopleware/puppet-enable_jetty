# Defaults for jetty see /etc/init.d/jetty8 for more

# allow Jetty to start
NO_START=0

# Listen to connections from this network host
# Use 0.0.0.0 as host to accept all connections.
JETTY_HOST=127.0.0.1

# Home of Java installation.
JAVA_HOME=<%= scope['javahome'] %>

JAVA_OPTIONS="-Xmx<%= scope['enable_jetty::xmx'] %>m -Djava.awt.headless=true -Djava.library.path=/usr/lib -Denv=production"

JETTY_ARGS="OPTIONS=default,autostore"

<% @env.each do |val| -%>
env <%= val %>
<% end -%>
